{% extends 'layout.twig' %}

{#main#}
{% block main %}
<section>
<div class="container">
	<div class="row clearfix">
	        {#aside menu#}
            {% block aside %}
                        <aside class="column column3">
                                    <h2>Каталог</h2>
                                    <ul>
                        {% for title in titles %}
                                        <li><a href="/catalog/{{ title }}">{{ title }}</a></li>
                        {% endfor %}
                                    </ul>
                        </aside>
                    {% endblock %}
            <div class="column column9">
                <div class="catalog">
                    <!-- хлебные крошки -->
                    <div class="breadcrumbs">
                        <a href="/">Главная</a>
                        {#<p>{% for title in 0..0 %}{{ cycle(titles, title) }}{% endfor %}</p>#}
                    </div>
                    <div class="row clearfix">
                        <!-- элементы каталога -->
                        {% block product %}
                            {% for item in ptitle %}
                            <div class="item-block column column4">
                              <a href='/{{ item }}' class="item">
                                <img src="/img/{{ imgname }}" alt="уточка">
                              </a>
                              <a href="" class="btn-basket">В Корзину</a>
                            </div>
                            {% endfor %}
                        {% endblock %}
                    </div>
                </div>
            </div>
	</div>
</div>
</section>
{% endblock %}
